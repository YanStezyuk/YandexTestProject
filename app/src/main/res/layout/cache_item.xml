<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cacheItem"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/default_margin_horizontal"
    android:paddingRight="@dimen/default_margin_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favouriteLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:tint="@color/favFalse"
            app:srcCompat="@drawable/ic_bookmark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sourceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="оригинал"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/targetText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="перевод" />

        </LinearLayout>

        <TextView
            android:id="@+id/translateDirection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="направление" />

    </LinearLayout>

</LinearLayout>