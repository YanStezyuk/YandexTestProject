<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/dictitem_synonym"
        android:text="синоним"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSynonym"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/dictitem_pos"
        android:text="часть речи"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPos"
        android:layout_below="@+id/dictitem_synonym"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>